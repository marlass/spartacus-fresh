{
  "git": {
    "requireCleanWorkingDir": false,
    "requireUpstream": false
  },
  "npm": {
    "publish": true,
    "publishPath": "./../../dist/core"
  },
  "scripts": {
    "afterBump": "cd ../.. && yarn build:core:lib"
  },
  "github": {
    "release": true,
    "releaseNotes": "cd ../.. && npm run --silent release-notes:core -- --from ${latestVersion} --to ${version}"
  }
}
